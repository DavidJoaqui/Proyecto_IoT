{% extends 'layout.html.twig' %}



{% block body %}

    {{ parent() }}
    {{ include('GestionBundle:propietarios:mensajes/confirmacion.html.twig') }}
    <div class="main container">
        <div class="row well">
            <div class="col-md-6">
                <div class="page-header">

                    <a href="{{ path('propietarios_index') }}" class="dropdown-toggle" role="button" aria-haspopup="true" aria-expanded="false">
                        <button class="btn-md btn-primary">
                            <--Atras
                        </button>
                    </a>

                    <h2>Editar Propietario</h2>

                </div>
                <fieldset>
                    {{ form_start (form,{'attr': {'role':'form'}}) }}


                    <div class="form-group">
                        {{ form_label(form.username) }}
                        {{ form_widget(form.username, {'attr':{'class':'form-control','placeholder':'Ingrese su nombre de usuario'}}) }}

                        <span class="text-danger">{{ form_errors(form.username)}}</span>

                    </div>

                    <div class="form-group">
                        {{ form_label(form.documento) }}
                        {{ form_widget(form.documento, {'attr':{'class':'form-control','placeholder':'Ingrese su nombre de usuario'}}) }}

                        <span class="text-danger">{{ form_errors(form.documento)}}</span>

                    </div>

                    <div class="form-group">
                        {{ form_label(form.nombres) }}
                        {{ form_widget(form.nombres, {'attr':{'class':'form-control','placeholder':'Ingrese su nombre' }})}}

                        <span class="text-danger">{{ form_errors(form.nombres) }}</span>

                    </div>

                    <div class="form-group">
                        {{ form_label(form.apellidos) }}
                        {{ form_widget(form.apellidos, {'attr':{'class':'form-control','placeholder':'Ingrese su apellido' }})}}

                        <span class="text-danger">{{ form_errors(form.apellidos) }}</span>

                    </div>

                    <div class="form-group">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email, {'attr':{'class':'form-control','placeholder':'Ingrese su direccion de correo' }})}}

                        <span class="text-danger">{{ form_errors(form.email) }}</span>

                    </div>

                    <div class="form-group">
                        {{ form_label(form.password) }}
                        {{ form_widget(form.password, {'attr':{'class':'form-control','placeholder':'Ingrese su password','required':false}})}}

                        <span class="text-danger">{{ form_errors(form.password) }}</span>


                    </div>

                    <div class="form-group">
                        {{ form_label(form.role) }}
                        {{ form_widget(form.role,{'attr':{'class':'form-control'}})}}

                        <span class="text-danger">{{ form_errors(form.role) }}</span>

                    </div>

                    <div class="form-group">
                        {{ form_label(form.telefono) }}
                        {{ form_widget(form.telefono,{'attr':{'class':'form-control'}})}}

                        <span class="text-danger">{{ form_errors(form.telefono) }}</span>

                    </div>


                    <div class="checkbox">

                        <label>
                            {{ form_widget(form.is_Active)}}Activo
                            <span class="text-danger">{{ form_errors(form.is_Active) }}</span>
                        </label>

                    </div>


                </fieldset>

                <p>
                    {{ form_widget(form.save, {'label' : 'Actualizar Usuario' , 'attr': {'class':'btn btn-md btn-success'}}) }}

                </p>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}